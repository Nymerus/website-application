ng-controller(ng-controller="NymerusUserGroupCtrl")
    //ng-controller(ng-controller='NymerusFileManagerCtrl')
    div(class='content-area column-directory-interface col-md-12')
        div(class='row')
            div(class='upper-dock-one col-md-12')
                div(class='col-md-4')
                    span(class='glyphicon glyphicon-chevron-left dock-item', ng-click='goParent()')
                    span(class='glyphicon glyphicon-chevron-up dock-item padding-correction-one', ng-click='goRoot()')
                    span(class="glyphicon glyphicon-cloud-download dock-item", ng-click='repositoryDownload()')
                    //span(class="glyphicon glyphicon-refresh dock-item", ng-click='repositoryReload()')

                nymeruspathmanager(class='path col-md-8', directiveid='shared')

        div(class='row downside-dock')
            draganddrop()
                nymerusfilemanager(class='file-manager col-md-12', autoheight, substractvalue='100', directiveid='shared')

        div(class='column-item-information')